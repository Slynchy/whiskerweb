{
  "compilerOptions": {
    "skipLibCheck": true,
    "declaration": true,
    "outDir": "dist",
    "baseUrl": "./src",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "target": "es6",
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "paths": {},
    "typeRoots": [
      "./types",
      "./node_modules/@types"
    ]
  },
  "include": [
    "src", // Include all files in the src folder
    "index.ts", // Include the index.ts file
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
